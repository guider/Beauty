<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pla="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical" >

    <include layout="@layout/top_bar" />

    <com.huewu.pla.lib.WaterFallListView
        android:id="@+id/myListview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        pla:plaColumnNumber="3"
        pla:plaColumnPaddingLeft="2dp"
        pla:plaColumnPaddingRight="2dp"
        pla:plaLandscapeColumnNumber="3" />

    <LinearLayout
        android:id="@+id/notifiy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notifiy_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/xingren_bai"
            android:text="没有收藏数据，赶紧去收集吧！" />
        <Button 
            android:id="@+id/notifiy_bt"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_corner_item_middle_bg"
            android:textColor="@color/dark_brown"
            android:text="点我去收集"
            />
    </LinearLayout>

</LinearLayout>